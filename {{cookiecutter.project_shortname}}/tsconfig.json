{
    "compilerOptions": {
        "outDir": "./dist",
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "baseUrl": "./src",
        "emitDecoratorMetadata": false,
        "experimentalDecorators": true,
        "jsx": "react",
        "module": "esnext",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "sourceMap": false,
        "strict": true,
        "strictPropertyInitialization": false,
        "target": "esnext",
        "traceResolution": false
    },
    "exclude": [
        "tests/*"
    ]
}